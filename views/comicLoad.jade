div(class="modal fade",id="loadModal",tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
	div(class="modal-dialog")
		div(class="modal-content")
			div(class="modal-header")
				button(type="button",class="close",data-dismiss="modal",aria-hidden="true") &times;
				h4(class="modal-title",id="myModalLabel") Open Comic
			div(class="modal-body")
					select.form-control(id='comicSelect',size='8')
			div(class="modal-footer")
				button(type="button",class="btn btn-default",data-dismiss="modal") Cancel
				button#confirmLoadButton(type="button",class="btn btn-primary") Open
