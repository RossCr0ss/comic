doctype html
html
	head
		title Amphibian.com Stats
		meta(charset='utf-8')
		link(href='/css/style.css',rel='stylesheet')
		link(href='/css/bootstrap.min.css',rel='stylesheet')
		link(href='/css/font-awesome.min.css',rel='stylesheet')
		link(href='/css/style2.css',rel='stylesheet')
		link(href='/css/xcharts.min.css',rel='stylesheet')
		link(href='/simg/frog.ico',rel='shortcut icon')
		if (basic)
			link(href='/css/sniglet-webfont.css',rel='stylesheet')
		else
			link(href='http://fonts.googleapis.com/css?family=Sniglet',rel='stylesheet',type='text/css')
	
	body
		include header
		
		div(class="about-us block",style="border-bottom: none;")
			div(class="container")
				
				div(class="about-one")

					div(class="about-one-item")

						div(class="about-one-content")
						
							h3 Comic Views (last 7 days)
							div(style="margin: auto; width: 80%;")
								canvas#viewsChart(style="border: 1px solid #000000; margin-bottom: 10px; padding: 20px;",width="700",height="400")

					div(class="clearfix")

				div(class="about-one",style="margin-top: 10px;")

					div(class="about-one-item")

						div(class="about-one-content")
						
							h3 User Agents (last 7 days)
							div(style="margin: auto; width: 50%;")
								canvas#agentsChart(style="margin-bottom: 10px; padding: 20px;",width="400",height="400")

					div(class="clearfix")
		
		include js
		script(src='/js/Chart.min.js')
		script(src='/js/stats.js')
